{
  "manifest_version": 3,
  "name": "Trim Trello",
  "version": "1.0",
  "description": "Hide unwanted elements in Trello web pages",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://trello.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Trim Trello"
  },
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "js": ["constants.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
